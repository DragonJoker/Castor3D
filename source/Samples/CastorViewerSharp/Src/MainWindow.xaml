<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="CastorViewerSharp.MainWindow"
        Title="CastorViewer#" Height="600" Width="800" SizeToContent="WidthAndHeight" MinWidth="800" MinHeight="600" WindowStartupLocation="CenterScreen">
    <Grid Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="24" />
            <RowDefinition Height="{Binding}" />
            <RowDefinition Height="24" />
        </Grid.RowDefinitions>
        <Menu Grid.Row="0" Name="MainMenu" Height="24" HorizontalAlignment="Stretch" VerticalAlignment="Top">
            <MenuItem Header="File">
                <MenuItem Header="Load scene file" Click="OnLoadScene"/>
                <MenuItem Header="Export scene" Click="OnExportScene"/>
                <Separator/>
                <MenuItem Header="Quit"/>
            </MenuItem>
        </Menu>
        <Canvas Grid.Row="1" Name="RenderPanel" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="#FFC7C7C7"/>
        <StatusBar Grid.Row="2"/>
    </Grid>
</Window>
