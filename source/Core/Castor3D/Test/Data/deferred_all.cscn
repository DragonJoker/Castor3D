debug_overlays true

scene "Scene"
{
	ambient_light 0.2 0.2 0.2
	background_colour 0.5 0.5 0.5 1.0
	include "common_materials.cscn"

	scene_node "LightNode"
	{
		orientation 1 0 0 45
	}

	scene_node "SpotLightNode"
	{
		orientation 1 0 0 45
		position 0.0 100.0 -100.0
	}

	scene_node "PointLightNode"
	{
		position 0.0 100.0 0.0
	}

	light "Light"
	{
		type directional
		parent "LightNode"
		colour 1.0 1.0 1.0
		intensity 0.8 1.0
	}

	light "SpotLight"
	{
		type spot
		parent "SpotLightNode"
		colour 1.0 0.0 0.0
		intensity 0.8 1.0
		attenuation 1.0 0.00001 0.0001
		cut_off 20
	}

	light "PointLight"
	{
		type point
		parent "PointLightNode"
		colour 0.0 1.0 0.0
		intensity 0.8 1.0
		attenuation 1.0 0.0001 0.0001
	}

	object "SpotLight"
	{
		parent "SpotLightNode"
		cast_shadows false

		mesh "SpotLightMesh"
		{
			type "cube" -width=1 -height=1 -depth=4
		}

		material "WhiteEmit"
	}

	object "PointLight"
	{
		parent "PointLightNode"
		cast_shadows false

		mesh "PointLightMesh"
		{
			type "sphere" -subdiv=20 -radius=1
		}

		material "WhiteEmit"
	}

	scene_node "FinalNode"
	{
		position 0.0 0.0 0.0
	}
	object "FinalPrimitive"
	{
		parent "FinalNode"
		mesh "Mesh"
		{
			type "torus" -inner_count=40 -outer_count=40 -inner_size=25 -outer_size=50
		}
		material "Silver"
	}

	scene_node "MainCameraNode"
	{
		position 0.0 0.0 -200.0
	}
	camera "MainCamera"
	{
		parent "MainCameraNode"
		primitive triangles
		viewport "MainViewport"
		{
			type perspective
			fov_y 45.0
			aspect_ratio 1.778
			near 0.1
			far 20000.0
		}
	}
}

window "Window"
{
	render_target
	{
		format argb32
		size screen_size
		scene "Scene"
		camera "MainCamera"
		technique "deferred"
	}
	fullscreen false
	vsync false
}
