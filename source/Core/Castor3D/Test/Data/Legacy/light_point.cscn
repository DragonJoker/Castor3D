debug_overlays true

scene "Scene"
{
	materials legacy
	ambient_light 0.2 0.2 0.2
	background_colour 0.5 0.5 0.5 1.0
	include "common_materials.cscn"

	scene_node "PointLightNode"
	{
		position 0 50 0
	}

	light "PointLight"
	{
		type point
		parent "PointLightNode"
		colour 1.0 1.0 1.0
		intensity 0.8 1.0
		attenuation 1.0 0.01 0.0
	}

	object "PointLight"
	{
		parent "PointLightNode"
		cast_shadows false

		mesh "PointLightMesh"
		{
			type "sphere" -subdiv=20 -radius=1
		}

		material "WhiteEmit"
	}

	scene_node "FinalNode"
	{
		position 0.0 0.0 0.0
	}
	object "FinalPrimitive"
	{
		parent "FinalNode"
		mesh "Mesh"
		{
			type "torus" -inner_count=40 -outer_count=40 -inner_size=25 -outer_size=50
		}
		material "Silver"
	}

	scene_node "MainCameraNode"
	{
		position 0.0 200.0 -200.0
		orientation 1 0 0 45
	}
	camera "MainCamera"
	{
		parent "MainCameraNode"
		primitive triangles
		viewport "MainViewport"
		{
			type perspective
			fov_y 45.0
			aspect_ratio 1.778
			near 0.1
			far 20000.0
		}
	}
}

window "Window"
{
	render_target
	{
		format argb32
		size screen_size
		scene "Scene"
		camera "MainCamera"
	}
	fullscreen false
	vsync false
}
