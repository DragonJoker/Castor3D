<?xml version="1.0" encoding="utf-8"?>
<AutoVisualizer xmlns="http://schemas.microsoft.com/vstudio/debugger/natvis/2010">

  <Type Name="castor3d::TUniform&lt;*&gt;">
    <DisplayString>{{name={m_name} count={m_occurences}}}</DisplayString>
    <Expand>
      <Item Name="name">m_name</Item>
      <Item Name="count">m_occurences</Item>
      <Item Name="changed">m_changed</Item>
      <Item Name="stride">m_stride</Item>
      <Item Condition="m_occurences > 1" Name="values">m_typedValues</Item>
      <Item Condition="m_occurences == 1" Name="value">m_typedValues[0]</Item>
    </Expand>
  </Type>

  <Type Name="castor3d::UniformBufferBinding">
    <DisplayString>{{size={m_size}}}</DisplayString>
    <Expand>
      <Item Name="size">m_size</Item>
      <Item Name="variables">m_variables</Item>
    </Expand>
  </Type>

</AutoVisualizer>
