{
    "$schema": "https://raw.githubusercontent.com/microsoft/vcpkg/master/scripts/vcpkg.schema.json",
    "name": "castor3d",
    "version": "0.14.0",
    "builtin-baseline": "083f103cfb6ff4a05d6c49b6a2231965e08b6e2b",
    "dependencies": [ "freetype",
        "gli",
        "vkfft",
        "meshoptimizer",
        "minizip",
        "spirv-cross",
        "zlib"
    ],
    "default-features": [ "cvtt", "assimp", "freeimage", "glsl", "vkfft" ],
    "features": {
        "cvtt": {
            "description": "Use ConvectionKernels library to block compress textures.",
            "dependencies": [
                "convectionkernels"
            ]
        },
        "assimp": {
            "description": "Use Assimp library to import external scenes.",
            "dependencies": [
                "assimp"
            ]
        },
        "freeimage": {
            "description": "Use FreeImage library over stb_image to import TIF, PNG or RAW images.",
            "dependencies": [
                "freeimage"
            ]
        },
        "glsl": {
            "description": "Enable GLSL shaders import support.",
            "dependencies": [
                "glslang"
            ]
        },
        "vkfft": {
            "description": "Use VkFFT to compute Fast Fourier Transforms.",
            "dependencies": [
                "vkfft"
            ]
        }
    }
}
