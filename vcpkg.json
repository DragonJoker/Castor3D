{
  "$schema": "https://raw.githubusercontent.com/microsoft/vcpkg/master/scripts/vcpkg.schema.json",
  "name": "castor3d",
  "version": "0.15.0",
  "builtin-baseline": "3b213864579b6fa686e38715508f7cd41a50900f",
  "dependencies": [
    "convectionkernels",
    "freetype",
    "gli",
    "meshoptimizer",
    "mikktspace",
    "minizip",
    "vulkan-headers",
    "zlib"
  ],
  "default-features": [
    "assimp",
    "freeimage",
    "glsl",
    "gltf",
    "vkfft"
  ],
  "vcpkg-configuration": {
    "overlay-ports": [
      "./data/vcpkg/ports/ashes",
      "./data/vcpkg/ports/fastgltf",
      "./data/vcpkg/ports/rendergraph",
      "./data/vcpkg/ports/shaderwriter"
    ]
  },
  "features": {
    "assimp": {
      "description": "Use Assimp library to import external scenes.",
      "dependencies": [
        "assimp"
      ]
    },
    "freeimage": {
      "description": "Use FreeImage library over stb_image to import TIF, PNG or RAW images.",
      "dependencies": [
        "freeimage"
      ]
    },
    "glsl": {
      "description": "Enable GLSL shaders import support.",
      "dependencies": [
        "glslang",
        "spirv-cross"
      ]
    },
    "gltf": {
      "description": "Use fastgltf library to import glTF scenes.",
      "dependencies": [
        "fastgltf",
        "simdjson"
      ]
    },
    "vkfft": {
      "description": "Use VkFFT to compute Fast Fourier Transforms (Necessary for FFTOcean plugin).",
      "dependencies": [
        "vkfft"
      ]
    },
    "tools": {
      "description": "Build tools projects.",
      "dependencies": [
        {
          "name": "wxwidgets",
          "platform": "!linux"
        }
      ]
    },
    "demos": {
      "description": "Build demo projects.",
      "dependencies": [
        {
          "name": "wxwidgets",
          "platform": "!linux"
        }
      ]
    },
    "vcpkg-deps": {
      "description": "Use vcpkg's ashes/rendergraph/shaderwriter.",
      "dependencies": [
        {
          "name": "ashes",
          "features": [
            "vulkan"
          ]
        },
        "rendergraph",
        {
          "name": "shaderwriter",
          "features": [
            "spirv",
            "glsl",
            "hlsl"
          ]
        }
      ]
    }
  }
}
